
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check if the user has an 'admin' role in their user document
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isTeacher() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Users can read their own data. Admins can read anyone's data.
      allow read: if isUser(userId) || isAdmin();
      // A user can create their own user document. Admins can write to any user document.
      allow write: if isUser(userId) || isAdmin();
    }
    
    // Rules for all collections under a specific college
    match /colleges/{collegeId}/{document=**} {
        // Any authenticated user can read data (e.g., events, notices, degree lists)
        allow read: if isSignedIn();
        // Only admins can write/create/delete documents like degrees, streams, teachers, etc.
        allow write: if isAdmin();
    }
  }
}
