rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Admins have full read/write access to everything.
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'subhasishnayak38@gmail.com';
    }

    // TODO: Add rules for students and teachers later.
    // For example, an authenticated user can read their own data.
    // match /users/{userId} {
    //   allow read, update: if request.auth != null && request.auth.uid == userId;
    // }
  }
}
